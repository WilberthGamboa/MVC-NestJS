<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>App</title>
  </head>
  <body>
    <h1>REGISTER</h1>
    {{> main}}

    <form enctype="application/json" action="/auth/register" method="POST" >
      
        <input type="text" name="email" placeholder="email">
        {{#each messages}}
        {{#if email}}
          <label for="email">{{email}}</label>
        {{/if}}
        {{/each}}
        <input type="text" name="password" placeholder="password">
        {{#each messages}}
          <label for="password">{{password}}</label>
        {{/each}}
    <input type="submit">

    </form>

  </body>
</html>